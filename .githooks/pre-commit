#!/bin/bash

# List of file extensions to check
EXTENSIONS="h|hh|hpp|hxx|c|cc|cpp|cxx"

# Find all staged C++ files
FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E "\.($EXTENSIONS)$")

# Exit early if no matching files
[ -z "$FILES" ] && exit 0

echo "Running clang-format on staged C++ files..."

if ! command -v clang-format &> /dev/null; then
    echo "Error: clang-format not found in PATH."
    echo "Aborting commit. Install clang-format or bypass with 'git commit --no-verify'."
    exit 1
fi

# Format each file and restage it
for FILE in $FILES; do
    if [ -f "$FILE" ]; then
        clang-format -i "$FILE"
        git add "$FILE"
        echo "Formatted: $FILE"
    fi
done

echo "clang-format completed."

exit 0
